generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma-mongodb/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_MONGODB_URL")
}

model Event {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  global_id    String?
  internal_id  String?         @map("id")
  title        String?
  type         String?
  categories   String[]
  texts        Text[]
  country      String?
  areas        String[]
  city         String?
  zip          String?
  phone        String?
  web          String?
  email        String?
  author       String?
  geo          Geo
  ratings      Rating[]
  timeInterval TimeInterval[]

  @@map("veranstaltung")
}

type Text {
  rel   String?
  text  String?
  value String?
}

type Geo {
  main GeoMain
}

type GeoMain {
  latitude  Decimal
  longitude Decimal
  altitude  Decimal?
}

type Rating {
  type  String?
  value Int
}

type TimeInterval {
  weekdays    String[]
  start       String?
  end         String?
  repeatUntil String?
  tz          String?
  freq        String?
  interval    Int
}
